<UserControl x:Class="SpellWork.SpellViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:setting="clr-namespace:SpellWork.Properties"
             d:DesignHeight="472"
             d:DesignWidth="783"
             mc:Ignorable="d">
    <UserControl.CommandBindings>
        <CommandBinding Command="Search" Executed="ApplyFilter" />
    </UserControl.CommandBindings>
    <UserControl.InputBindings>
        <KeyBinding Key="F3" Command="Search" />
    </UserControl.InputBindings>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <GridSplitter Grid.RowSpan="2"
                      Grid.Column="1"
                      Width="5"
                      HorizontalAlignment="Left"
                      ShowsPreview="True" />
        <ListView Name="lvSpellList"
                  Grid.Row="1"
                  Grid.Column="1"
                  Margin="5,0,0,0"
                  IsSynchronizedWithCurrentItem="True"
                  ItemsSource="{Binding}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="60"
                                    DisplayMemberBinding="{Binding ID}"
                                    Header="ID" />
                    <GridViewColumn DisplayMemberBinding="{Binding SpellName}" Header="Name" />
                </GridView>
            </ListView.View>
        </ListView>

        <FlowDocumentScrollViewer Grid.RowSpan="2">
            <FlowDocument>
                <!--  todo: implement  -->
            </FlowDocument>
        </FlowDocumentScrollViewer>

        <Border Grid.Column="1" Margin="5,0,0,0">
            <StackPanel DataContext="{Binding Source={x:Static setting:Settings.Default}}">
                <Border Padding="3,3,3,3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="78" />
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="Spell Name: " />
                        <TextBox Name="tbSpellName" Grid.Column="1" Text="{Binding SpellNameFilter}" />
                        <Button Grid.Column="2"
                                Command="Search"
                                Content="Search" />
                    </Grid>
                </Border>
                <Border Padding="3,3,3,3">
                    <ComboBox MinWidth="250" ItemsSource="{Binding Source={StaticResource AuraType}}" SelectedValue="{Binding AuraTypeFilter}"/>
                </Border>
                <Border Padding="3,3,3,3">
                    <ComboBox MinWidth="250" ItemsSource="{Binding Source={StaticResource AuraType}}" />
                </Border>
                <Border Padding="3,3,3,3">
                    <ComboBox MinWidth="250" ItemsSource="{Binding Source={StaticResource AuraType}}" />
                </Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="12*" />
                        <ColumnDefinition Width="12*" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Padding="3,3,3,3">
                        <ComboBox ItemsSource="{Binding Source={StaticResource AuraType}}" />
                    </Border>
                    <Border Grid.Column="1" Padding="3,3,3,3">
                        <ComboBox ItemsSource="{Binding Source={StaticResource AuraType}}" />
                    </Border>
                </Grid>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
