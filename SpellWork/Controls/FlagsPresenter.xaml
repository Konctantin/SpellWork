<UserControl x:Class="SpellWork.FlagsPresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SpellWork"
             x:Name="flagsPresenter"
             mc:Ignorable="d">
    <GroupBox BorderBrush="Green"
              BorderThickness="1"
              Padding="5"
              Header="{Binding ElementName=flagsPresenter, Path=Header}">
        <ScrollViewer HorizontalContentAlignment="Stretch"
                      VerticalScrollBarVisibility="Disabled"
                      HorizontalScrollBarVisibility="Auto">
            <WrapPanel x:Name="panel" Orientation="Vertical" />
        </ScrollViewer>
    </GroupBox>
</UserControl>
