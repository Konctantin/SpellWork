<Window x:Class="SpellWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SpellWork"
        Title="MainWindow"
        Width="837"
        Height="535"
        Style="{Binding Mode=OneWay,
                        Source={StaticResource KamillaStyle}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22" />
            <RowDefinition Height="463*" />
            <RowDefinition Height="22" />
        </Grid.RowDefinitions>
        <TabControl Grid.Row="1">
            <TabItem Header="Spell Info">
                <local:SpellViewer DataContext="{StaticResource spellCollections}" />
            </TabItem>
            <TabItem Header="SpellProcEvent">
                <local:SpellProcConstructor DataContext="{StaticResource spellCollections}" />
            </TabItem>
            <TabItem Header="SqlData">
                <local:SqlData />
            </TabItem>

        </TabControl>

    </Grid>
</Window>
